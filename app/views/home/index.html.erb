<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <%= simple_form_for Listing.new do |f| %>
    <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <%= f.input :price %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">              
              <%= f.input :description, input_html: { class: "materialize-textarea" } %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <%= f.input :address %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <%= f.input :topic %>
            </div>
          </div>
           
        </form>
      </div>
      <div class="modal-footer">
        <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
        <%= f.button :submit, class: "modal-action modal-close waves-effect waves-green btn-flat"%>
      </div>
    <% end %>
  </div>
</div>

<div class="listing-container">
  <% if user_signed_in? %>
    
    <h3 id="title-your_listings">
      Your Listings
      <a id="button-new_listing" class="modal-trigger btn-floating waves-effect orange lighten-1" href="#modal1"><i class="material-icons">add</i></a>
    </h3>
    
    <div class="row">
    <% @user.listings.each do |listing| %>
      <div class="row">
        <div class="col s6 m12">
          <div class="card white">
            <div class="card-content black-text">
             <span class="card-title"><%= listing.address %></span>
             <li>Posted by: <%= listing.user.email %></li>
             <li>Topic: <%= listing.topic %></li>
             <li>Price: $<%= listing.price %></li>
             <!-- <li>Latitude: <%= listing.latitude %></li>
             <li>Longitude: <%= listing.longitude %></li> -->
             <li>Description: <%= listing.description %></li>
           </div>
           <div class="card-action">
             <a href="">Details</a>
             <%= button_to "ðŸ’–", favorite_path(id: listing), :class => "button medium", :method => :patch %>Favorites: <%= listing.num_favorites %>
           </div>
         </div>
       </div>
      </div>
    <% end %>
    </div>
  <% end %>    
</div>


<div id="map"></div>
<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function() {
  markers = handler.addMarkers([
  <% @user.listings.each do |listing| %>
    <% if (listing.latitude != nil) then %>
      {
        "lat": <%= listing.latitude %>,
        "lng": <%= listing.longitude %>,
        "picture": {
          "url": "http://maps.google.com/mapfiles/ms/icons/red-dot.png",
          "width":  32,
          "height": 32
        },
        "infowindow": "<%= listing.address %>"
      },
    <% end %>
  <% end %>
]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
